<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <h2>Groups</h2>

    <%= render "shared/table", items: @groups, item_class: Group, columns: ["name", "description", "organizers.full_name"], search_term: @search_term %>
  </div>
</div>
