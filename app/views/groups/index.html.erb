<div class="row">
  <div class="col-lg-12">
    <h2>Groups</h2>
    <div class="form-group">
      <%= render "shared/table/search", item_class: Group, search_term: @search_term %>
    </div>
    <div class="form-group">
      <%= render "shared/table/file_upload", group: Group.new %>
      <div class="pull-right">
        <%= render "shared/table/new_button", item_class: Group, params: {} %>
      </div>
    </div>
    <div class="form-group">
      <%= render "shared/table/table", items: @groups, item_class: Group, columns: @columns, search_term: @search_term %>
    </div>
  </div>
</div>
